# Specialized container for AI services
FROM python:3.11-slim

ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1

# Install system dependencies for AI/ML
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Install AI-specific requirements
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Download AI models
RUN python -c "import spacy; spacy.cli.download('en_core_web_sm')"
RUN python -c "from transformers import pipeline; pipeline('sentiment-analysis', model='cardiffnlp/twitter-roberta-base-sentiment-latest')"
RUN python -c "from sentence_transformers import SentenceTransformer; SentenceTransformer('paraphrase-multilingual-MiniLM-L12-v2')"

# Copy AI services code
COPY core/ ./core/
COPY agents/ ./agents/
COPY nlp/ ./nlp/
COPY integrations/ ./integrations/

# Create non-root user
RUN groupadd -r aiuser && useradd -r -g aiuser aiuser
RUN chown -R aiuser:aiuser /app
USER aiuser

# Health check for AI services
HEALTHCHECK --interval=60s --timeout=30s --start-period=120s --retries=3 \
    CMD python -c "from core.ai_services import MalaysianAIServices; ai = MalaysianAIServices(); print('AI services healthy' if ai.loaded else exit(1))"

EXPOSE 8001

CMD ["python", "-m", "agents.deploy"]